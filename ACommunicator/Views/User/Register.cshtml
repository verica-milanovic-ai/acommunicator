@using ACommunicator.Properties
@model ACommunicator.Models.RegisterViewModel
<div class="row login-form">
    <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-login">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-6">
                        <a href="/User/Login" id="login-form-link">@Resources.LogIn</a>
                    </div>
                    <div class="col-xs-6">
                        <a href="#" class="active" id="register-form-link">@Resources.Register</a>
                    </div>
                </div>
                <hr>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form id="register-form" action="/User/Register" method="post" role="form">
                            <div class="form-group">
                                @Html.LabelFor(x => x.Username)
                                @Html.TextBoxFor(x => x.Username, new { @tabindex = "1", @placeholder = Resources.UsernameExample, @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Email)
                                @Html.TextBoxFor(x => x.Email, new { @tabindex = "2", @placeholder = Resources.EmailExample, @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.Password)
                                @Html.PasswordFor(x => x.Password, new { @tabindex = "3", @placeholder = Resources.PasswordExample, @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(x => x.ConfirmPassword)
                                @Html.PasswordFor(x => x.ConfirmPassword, new { @tabindex = "4", @placeholder = Resources.PasswordExample, @class = "form-control" })
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-6 col-sm-offset-3">
                                        <input type="submit" name="register-submit" id="register-submit" tabindex="5" class="form-control btn btn-register" value="@Resources.Register">
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
