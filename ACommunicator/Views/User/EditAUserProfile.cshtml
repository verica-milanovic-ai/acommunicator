@using ACommunicator.Properties
@model ACommunicator.Models.EditAUserProfileViewModel
<br />
@Html.HiddenFor(m => m.AUser.Id)
@Html.HiddenFor(m => m.AUser.Password)
@Html.HiddenFor(m => m.AUser.PicturePath)

<form class="edit-form" action="/User/EditAUserProfile" method="post" role="form">
    <div class="form-group row">
        <div class="col-sm-offset-3 col-sm-6">
            @Html.LabelFor(x => x.AUser.Username)
            @Html.TextBoxFor(x => x.AUser.Username, new { @tabindex = "1", @placeholder = Resources.UsernameExample, @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-offset-3 col-sm-6">
            @Html.LabelFor(x => x.AUser.Name)
            @Html.TextBoxFor(x => x.AUser.Name, new { @tabindex = "2", @placeholder = Resources.NameExample, @class = "form-control" })
            @Html.ValidationMessageFor(x => x.AUser.Name)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-offset-3 col-sm-6">
            @Html.LabelFor(x => x.AUser.Email)
            @Html.TextBoxFor(x => x.AUser.Email, new { @tabindex = "3", @placeholder = Resources.EmailExample, @class = "form-control" })
            @Html.ValidationMessageFor(x => x.AUser.Email)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-offset-3 col-sm-6">
            @Html.LabelFor(x => x.AUser.Telephone)
            @Html.TextBoxFor(x => x.AUser.Telephone, new { @tabindex = "4", @placeholder = Resources.TelephoneExample, @class = "form-control" })
            @Html.ValidationMessageFor(x => x.AUser.Telephone)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-offset-3 col-sm-6">
            @Html.LabelFor(x => x.NewPassword)
            @Html.PasswordFor(x => x.NewPassword, new { @tabindex = "5", @placeholder = Resources.PasswordExample, @class = "form-control" })
            @Html.ValidationMessageFor(x => x.NewPassword)
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-offset-3 col-sm-6">
            @Html.LabelFor(x => x.ConfirmPassword)
            @Html.PasswordFor(x => x.ConfirmPassword, new { @tabindex = "6", @placeholder = Resources.PasswordExample, @class = "form-control" })
            @Html.ValidationMessageFor(x => x.ConfirmPassword)
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <div class="form-group">
                    <input type="submit" name="action" id="register-submit" tabindex="7" class="form-control btn btn-register" value="@Resources.Save">
                </div>
                <div class="form-group">
                    <input type="submit" name="action" id="register-cancel" tabindex="8" class="form-control btn btn-cancel" value="@Resources.Cancel">
                </div>
            </div>
        </div>
    </div>
</form>
